    title="Diretoria"
    subtitle="Adultos responsáveis pela administração e bom funcionamento do grupo."
    volunteers={[
      {
        title: 'Gustav',
        description: 'Diretor Presidente',
        image: { src: '~/assets/images/adultos/gustav-sq.jpg' },
      },
      {
        title: 'Tatiana',
        description: 'Diretora Administrativa',
        image: { src: '~/assets/images/adultos/tati-sq.jpg' },
      },
      {
        title: 'Giba',
        description: 'Diretor de Métodos Educativos',
        image: { src: '~/assets/images/adultos/giba-sq.jpg' },
      },
      { title: 'Amarilda', description: 'Diretora de Patrimônio' },
      { title: 'Rosani', description: 'Diretora Financeira' },
      { title: 'Etiane', description: 'Diretora de Comunicação', image: { src: '~/assets/images/adultos/eti-sq.jpg' } },
      { title: 'Léo', description: 'Diretor Adjunto de Comunicação' },
      { title: 'Amanda', description: 'Diretora Adjunta de Comunicação' },
      {
        title: 'Dodô',
        description: 'Diretor de Relações Institucionais',
        image: { src: '~/assets/images/adultos/dodo-sq.jpg' },
