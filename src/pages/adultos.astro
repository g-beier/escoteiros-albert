      { title: 'Gênesis', description: 'Diretor Administrativo' },
      { title: 'Amarilda', description: 'Diretora Administrativa Adjunta' },
      { title: 'Rolf', description: 'Diretor Financeiro' },
      {
        title: 'Márcia',
        description: 'Diretora Financeira Adjunta',
        image: { src: '~/assets/images/adultos/marcia-sq.jpg' },
      },
      {
        title: 'Dodô',
        description: 'Diretor de Relações Institucionais',
        image: { src: '~/assets/images/adultos/dodo-sq.jpg' },
