---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Volunteers from '~/components/widgets/Volunteers.astro';

const metadata = {
  title: 'Adultos',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Nossos Voluntários"
    subtitle=`O Escotismo é um movimento educativo de jovens e para jovens,
      que conta com o apoio de adultos voluntários.
      Este é o time de voluntários que mantém o Albert funcionando!`
  />
