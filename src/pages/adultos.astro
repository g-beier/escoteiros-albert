---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Volunteers from '~/components/widgets/Volunteers.astro';

const metadata = {
  title: 'Adultos',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Nossos Voluntários"
    subtitle="O Escotismo é um movimento educativo de jovens e para jovens, que conta com o apoio de adultos voluntários. Este é o time de voluntários que mantém o Albert funcionando!"
  />
  <Volunteers
    title="Diretoria"
    subtitle="Adultos responsáveis pela administração e bom funcionamento do grupo."
    volunteers={[
      { title: 'Etiane', description: 'Presidente' },
      { title: 'Tatiana', description: 'Vice-Presdente' },
      { title: 'Gênesis', description: 'Dirertor Administrativo' },
      { title: 'Amarilda', description: 'Diretora Administrativa Adjunta' },
      { title: 'Ricardo', description: 'Diretor Financeiro' },
      { title: 'Márcia', description: 'Diretora Financeira Adjunta' },
      {
        title: 'Dodô',
        description: 'Diretor de Relações Institucionais',
        image: { src: '~/assets/images/adultos/dorival.jpg' },
      },
      { title: 'Atenante', description: 'Diretor Adjunto de Relações Institucionais' },
      {
        title: 'Giba',
        description: 'Diretor de Métodos Educativos',
        image: { src: '~/assets/images/adultos/gilberto.jpg' },
      },
      {
        title: 'Gustav',
        description: 'Diretor Adjunto de Métodos Educativos',
        image: { src: '~/assets/images/adultos/gustav.jpg' },
      },
      { title: 'Zanini', description: 'Diretor de Comunicação' },
      { title: 'Luiza', description: 'Diretora Adjunta de Comunicação' },
    ]}
  />

  <Volunteers
    title="Alcateia Schweitzer"
    tagline="Ramo Lobinho - 6,5 a 10 anos"
    volunteers={[
      { title: 'Naan', description: 'Chefe de Seção - Akelá' },
      { title: 'Marcus', description: 'Assistente' },
      { title: 'Nicole', description: 'Assistente' },
      { title: 'Patrícia', description: 'Assistente - Raksha' },
    ]}
  />

  <Volunteers
    title="Tropa Escoteira Albert Schweitzer"
    tagline="Ramo Escoteiro - 10 a 14 anos"
    volunteers={[
      { title: 'Brenda', description: 'Chefe de Seção', image: { src: '~/assets/images/adultos/brenda.jpg' } },
      { title: 'Victória', description: 'Assistente' },
      { title: 'Vitor', description: 'Instrutor', iamge: { src: '~/assets/images/adultos/vitor.jpg' } },
    ]}
  />

  <Volunteers
    title="Tropa Sênior Kilimanjaro"
    tagline="Ramo Sênior - 14 a 17 anos"
    volunteers={[
      { title: 'Flávio', description: 'Chefe de Seção' },
      { title: 'Madu', description: 'Assistente', image: { src: '~/assets/images/adultos/maria-eduarda.jpg' } },
      { title: 'Rigo', description: 'Assistente' },
    ]}
  />

  <Volunteers
    title="Clã Pioneiro Highlander"
    tagline="Ramo Pioneiro - 17 a 20 anos"
    volunteers={[
      { title: 'Léo', description: 'Mestre Pioneiro' },
      { title: 'Aline', description: 'Assistente' },
    ]}
  />
</Layout>
