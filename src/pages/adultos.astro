---
import Layout from '@layouts/PageLayout.astro';
import HeroText from '@components/widgets/HeroText.astro';
import Volunteers from '@components/widgets/Volunteers.astro';
import { getCollection } from 'astro:content';

const activeVolunteers = await getCollection('volunteers').then((v) => v.map((v) => v.data).filter((v) => v.active));
const metadata = {
  title: 'Adultos',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Nossos Voluntários"
    subtitle=`O Escotismo é um movimento educativo de jovens e para jovens,<br/>
      que conta com o apoio de adultos voluntários.<br/>
      Este é o time de voluntários que mantém o Albert funcionando!`
  />
  <Volunteers
    title="Diretoria"
    subtitle="Adultos responsáveis pela administração e bom funcionamento do grupo."
    volunteers={activeVolunteers.filter((v) => v.tags.includes('diretoria'))}
  />

  <Volunteers
    title="Alcateia Schweitzer"
    tagline="Ramo Lobinho - 6,5 a 10 anos"
    volunteers={activeVolunteers.filter((v) => v.tags.includes('alcatéia'))}
  />

  <Volunteers
    title="Tropa Escoteira Albert Schweitzer"
    tagline="Ramo Escoteiro - 10 a 14 anos"
    volunteers={activeVolunteers.filter((v) => v.tags.includes('tropa-escoteira'))}
  />

  <Volunteers
    title="Tropa Sênior Kilimanjaro"
    tagline="Ramo Sênior - 14 a 17 anos"
    volunteers={activeVolunteers.filter((v) => v.tags.includes('tropa-sênior'))}
  />

  <Volunteers
    title="Clã Highlander"
    tagline="Ramo Pioneiro - 18 a 21 anos"
    volunteers={activeVolunteers.filter((v) => v.tags.includes('clã-pioneiro'))}
  />
</Layout>
