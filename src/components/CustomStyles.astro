---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: rgb(71 105 173);
    --aw-color-secondary: rgb(81 123 207);
    --aw-color-accent-y: rgb(220 164 56);
    --aw-color-accent-r: rgb(133 43 43);

    --aw-color-text-heading: rgb(13 13 13);
    --aw-color-text-default: rgb(28 28 28);
    --aw-color-text-muted: rgb(28 28 28 / 75%);
    --aw-color-bg-page: rgb(248 248 248);

    --aw-color-bg-page-dark: rgb(10 14 21);

    ::selection {
      background-color: rgba(241 216 167 / 80%);
    }
  }

  .dark {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: rgb(71 105 173);
    --aw-color-secondary: rgb(81 123 207);
    --aw-color-accent-y: rgb(220 164 56);
    --aw-color-accent-r: rgb(133 43 43);

    --aw-color-text-heading: rgb(248 248 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 75%);
    --aw-color-bg-page: rgb(16 22 35);

    ::selection {
      background-color: rgba(139 88 0 / 40%);
      color: snow;
    }
  }
</style>
