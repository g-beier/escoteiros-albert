---
import { Icon } from 'astro-icon/components';
import { getStorePermalink } from '~/utils/permalinks';
import { I18N } from 'astrowind:config';
import Button from '~/components/ui/Button.astro';

const { textDirection } = I18N;
---

<div class="mx-auto max-w-4xl px-6 pt-8 pb-12 sm:px-3 md:pt-4 md:pb-20 print:hidden">
  <Button variant="link" class="px-3 md:px-3" href={getStorePermalink()}>
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="mr-1 -ml-1.5 inline-block h-5 w-5 rtl:-mr-1.5 rtl:ml-1" />
      ) : (
        <Icon name="tabler:chevron-left" class="mr-1 -ml-1.5 inline-block h-5 w-5 rtl:-mr-1.5 rtl:ml-1" />
      )
    } Voltar a lojinha
  </Button>
</div>
